<Application x:Class="MancalaAssessment.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:MancalaAssessment"
             xmlns:converters="clr-namespace:MancalaAssessment.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <converters:OwnerPlayerToStrokeConverter x:Key="OwnerPlayerToStrokeConverter"/>
        <converters:BoardSizeToHalfTheBoardSizeConverter x:Key="BoardSizeToHalfTheBoardSizeConverter"/>
        <converters:CollectionToCollectionInCollectionConverter x:Key="CollectionToCollectionInCollectionConverter"/>
        <converters:OwnerPlayerToGridRowConverter x:Key="OwnerPlayerToGridRowConverter"/>
        <converters:ItemsControlToItemsCountConverter x:Key="ItemsControlToItemsCountConverter"/>
        <converters:PlayerNumberToEnabledConverter x:Key="PlayerNumberToEnabledConverter"/>
    </Application.Resources>
</Application>
